<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      
      <div>
        <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %>
        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>
      </div>
      
      <div class="row">
        <div class="text-center col-12">
          <a class="fas fa-user-cog btn col text-center my-1 border " href="/users/<%= @user.id %>/edit" role="button"></a>
        </div>
      </div>
      <div>
        <h2>New book</h2>
        <%= form_with model: @book, local:true do |f| %>
          <h6>title</h6>
          <%= f.text_field :title %>
          <h6>Opinion</h6>
          <%= f.text_field :body %>
          <button type="submit" class="row btn btn-success my-1">Create Book</button>
        <% end %>
      </div>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @user.books.each do |book| %>
            <tr>
              <th>
                <div class="row">
                  <a href="/users/<%= @user.id %>">
                    <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %>
                  </a>
                </div>
              </th>
              <th><a href="/books/<%= book.id %>"><%= book.title %></a></th>
              <th><%= book.body %></th>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>